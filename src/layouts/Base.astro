---
import "../styles/global.css";

const { title = "PICTR | Your Personal Image Collection" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-dark-100 text-white overflow-x-hidden">
    <slot />
  </body>
</html>
